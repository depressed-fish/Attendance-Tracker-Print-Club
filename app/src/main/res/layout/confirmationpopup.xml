<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/popuplook"
            android:layout_marginLeft="5dp"
            android:text="Luca Iacovelli"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/signintime"
            style="@style/popuplook"
            android:layout_marginLeft="5dp"
            android:text="Sign-in: 11:07am"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/newtime"
            style="@style/popuplook"
            android:layout_marginLeft="5dp"
            android:text="New Time:\n1h 7m"
            android:autoSizeTextType="uniform"/>

        <Button
            android:id="@+id/buttonsign"
            style="@style/popuplook"
            android:layout_marginLeft="5dp"
            android:text="Sign"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studentnum"
            style="@style/popuplook"
            android:layout_marginRight="5dp"
            android:text="973739"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/signouttime"
            style="@style/popuplook"
            android:layout_marginRight="5dp"
            android:text="Sign-out: 12:30pm"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/totaltime"
            style="@style/popuplook"
            android:layout_marginRight="5dp"
            android:text="Total:\n100h 15m"
            android:autoSizeTextType="uniform"/>

        <Button
            android:id="@+id/buttoncancel"
            style="@style/popuplook"
            android:layout_marginRight="5dp"
            android:text="Cancel"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>
</LinearLayout>